apiVersion: v1
kind: Pod
metadata:
  name: nginx
spec:
  containers:
  - name: nginx
    image: nginx:1.14.2
    ports:
    - containerPort: 80
  - name: redis
    image: docker.arvancloud.ir/redis
    ports:
    - containerPort: 6379
  - name: mysql
    image: docker.arvancloud.ir/mysql
    ports:
    - containerPort: 3306

    env:
      - name: MYSQL_ROOT_PASSWORD
        value: '123'
      - name: MYSQL_DATABASE
        value: 'devops'
