
metadata:
  annotations:
    kubernetes.io/change-cause: 'change liveness prob from /samita to /'
  name: nginx-deployment-startupprobe
  labels:
    app: nginx-deployment-startupprobe
spec:
  strategy:
    type: Recreate
  replicas: 3
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx:1.15.2
        ports:
        - containerPort: 80
        startupProbe:
          tcpSocket:
           port: 80
          initialDelaySeconds: 10
        readinessProbe:
          httpGet:
            path: /
            port: 80
          periodSeconds: 5
          failureThreshold: 3
