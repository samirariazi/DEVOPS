apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
  labels:
    app: nginx-deployment
  annotations:
   kubernetes.io/change-cause : 'change replica from 3 to 5'

spec:
  replicas:5
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx:1.14.2
        ports:
        - containerPort: 80

      - name: mysql
        image: mysql:latest
        ports:
        - containerPort: 3306

~
