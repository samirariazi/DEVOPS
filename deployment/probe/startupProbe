apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment-startupprobe
  labels:
    app: nginx-deployment-startupprobe
spec:
  replicas: 3
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx:1.15.2
        ports:
        - containerPort: 80
        startupProbe:
          tcpSocket:
           port: 80
          initialDelaySeconds: 100

