apiVersion: batch/v1
kind: Job
metadata:
  name: simple-perl-job
spec:
  parallelism : 5
  ttlSecondsAfterFinished: 120
  backoffLimit: 2 # Retry the job up to 2 times if it fails
  template:
    spec:
      containers:
      - name: perl-container
        image: docker.arvancloud.ir/perl
        command: ["perl", "-e", "print 'Hello from Perl\n';"]
      restartPolicy: Never
~
~
~
~
~
~
~
~
~
~
